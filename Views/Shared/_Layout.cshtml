<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Manajemen Karyawan BNI46</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FE_PegawaiKontrak.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        .btn-bni {
            background-color: #0D7038;
            color: white;
            border: none;
        }

            .btn-bni:hover {
                background-color: #09562b;
                color: white;
            }

        :root {
            --bni-green: #0D7038;
        }

        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: var(--bni-green);
        }

        .navbar-brand, .navbar-nav .nav-link {
            color: #fff !important;
            font-weight: bold;
        }

            .navbar-nav .nav-link:hover {
                text-decoration: underline;
            }

        footer {
            background-color: #e9ecef;
            padding: 1rem 0;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100" data-success="@TempData["Success"]" data-error="@TempData["Error"]">
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Cabang" asp-action="Index">Manajemen Karyawan BNI46</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cabang" asp-action="Index">Cabang</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Jabatan" asp-action="Index">Jabatan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pegawai" asp-action="Index">Pegawai</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Content -->
    <div class="container flex-grow-1 py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container text-center text-muted">
            &copy; 2025 - Ahmad F. Lubis - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/alert.js" asp-append-version="true"></script>

</body>
</html>
